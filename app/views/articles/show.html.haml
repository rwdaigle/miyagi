- content_for(:page_title, @article.title)

%article

  %h1= @article.title
  
  %p.date
    Published 
    by 
    = @article.author.name
    on
    = @article.published_at.stamp("March 8, 2004")

  .body= raw(@article.body_html)

  .discuss
    %h4 Discuss:
    .hn= link_to("Hacker News", "http://news.ycombinator.com/submit", :class => "hn-share-button")
    .twitter= link_to("Twitter", "https://twitter.com/share", :class => "twitter-share-button", :"data-via" => "MiyagiJournal")
  
  .author
    .name= @article.author.name
    .links
      %ul
        %li.twitter= "@#{@article.author.twitter_username}"
        %li.github= @article.author.gh_username
        %li.site= link_to(@article.author.site_url)
    .profile= raw(@article.author.profile_html)

  .license= render :partial => 'license'
  
  %h3 Links mentioned in this article

  %ul.link_summary
    - for link in @article.links
      %li
        - if icon_words.include?(link.humanized_type)
          = link_to(link.humanized_url, link.url, class: 'iconic', title: icon_for(link.humanized_type))
        - else
          = link_to(link.humanized_url, link.url)
          

!!! Strict
%html
  %head
    %title
      = "#{yield(:page_title)} - Miyagi"
    = stylesheet_link_tag "application", :media => "all"
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,400,700' rel='stylesheet' type='text/css'>
    
    = airbrake_javascript_notifier
    = javascript_include_tag "application"    
    = csrf_meta_tags
    = render :partial => '/mixpanel'
    = render :partial => '/tracking'
    = render :partial => '/discuss'


  %body
    .header
    
      %a#logo{href: root_path}
        .icon= icon_for :fukuoka
        .label
          %h1= t 'app.name'
          %h2= t 'app.tagline'

      = render :partial => '/subscribe'
      
      //.twitter= link_to("@MiyagiJournal", "https://twitter.com/MiyagiJournal")
      
    .main
      = yield
    

    #yin_yang
      .side.day= icon_for :sun
      .side.night= icon_for :moon

    

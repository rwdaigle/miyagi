%ol.content.articles
  - for article in @articles
    %li.article

      %h2= link_to(article.title, article)
      %p.date
        = article.published_at.stamp("March 8, 2004")
      %p.summary
        = article.summary


//%h2 Authors
%ol.authors
  - for author in []#User.authors.random.limit(4)
    %li
      .name= author.name
      .profile= raw(author.profile_html)
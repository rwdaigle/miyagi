worker_processes  2;
daemon off;

events {
  worker_connections  1024;
}

http {

  include       mime.types;
  default_type  application/octet-stream;

  sendfile           on;
  keepalive_timeout  65;

  server {

    listen           <%= ENV['PORT'] %>;
    server_name      <%= ENV['HOST'] || 'localhost' %>;

    try_files        $uri $uri/ /index.html;

    location / {
      root build;
      autoindex off;
      access_log off;
      expires <%= ENV['DEFAULT_TTL'] || 3600 %>s;
      add_header Vary Accept-Encoding;
    }
  }

}